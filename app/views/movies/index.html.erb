<% session[:flow] = 'reset' %>

<%= link_to 'Cadastrar filme', new_movie_path %>

<h1>Filmes:</h1>

<ul>
  <% @movies.each do |m| %>
    <li style="padding: 5px;"><%= link_to m.title, movie_path(m.id) %> Ano: <%= m.release_year %>
      <% if m.release_year <= @current_date %>
        <span style="color: #FFFFFF;"><strong style="background-color: #00FF00;padding: 5px;margin: 5px">Lançado!</strong></span>
      <% else %>
        <span style="color: #FFFFFF;"><strong style="background-color: #FF0000;padding: 5px;margin: 5px">Não Lançado!</strong></span>
      <% end %>
    </li>
  <% end %>
</ul>
